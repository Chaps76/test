name: Reset Issue Status
on:
  schedule:
    - cron: "0 * * * 0" 
  jobs:
    reset_issue_status:
      runs-on: ubuntu-latest
      steps:
        - name: Reset Issue Status
          uses: actions/github-script@v5
          with:
            script: |
              await github.rest.issues.update({
                owner: Chaps76,
                repo: test,
                issue_number: test-repeat-issue #2,
                state: 'open'
              });
